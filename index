<html lang="pt-PT">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Validador QR — Dia da Mulher</title>
  <style>
    body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;margin:18px}
    .card{border:1px solid #ddd;border-radius:14px;padding:14px;margin:12px 0}
    button{padding:10px 14px;border:0;border-radius:10px;background:#111;color:#fff}
    input{padding:10px 12px;border:1px solid #ccc;border-radius:10px;width:100%}
    video{width:100%;max-width:420px;border-radius:14px;background:#000}
    .ok{color:#0a7a2f;font-weight:700}
    .bad{color:#b00020;font-weight:700}
  </style>
</head>
<body>

<h2>Validação de Convidados</h2>

<div class="card">
  <button onclick="start()">Ler QR Code</button>
  <video id="video" playsinline></video>
</div>

<div class="card" id="resultado">Aguardando leitura…</div>

<div class="card">
  <input id="manual" placeholder="Código manual (ex: ALICIA01)">
  <button onclick="verificar(document.getElementById('manual').value)" style="margin-top:10px">
    Validar manualmente
  </button>
</div>

<script>
  // LISTA DE CONVIDADOS (TESTE)
  const convidados = {
    "ALICIA01": "Alicia Reis",
    "ARIANA01": "Ariana Silva"
  };

  const resultado = document.getElementById('resultado');
  const video = document.getElementById('video');
  let stream, detector;

  function verificar(codigo){
    codigo = codigo.trim();
    if(convidados[codigo]){
      resultado.innerHTML = `
        <div class="ok">ESTÁ NA LISTA ✅</div>
        <div><b>${convidados[codigo]}</b></div>
        <div>Código: ${codigo}</div>
      `;
    } else {
      resultado.innerHTML = `
        <div class="bad">NÃO ESTÁ NA LISTA ❌</div>
        <div>Código: ${codigo}</div>
      `;
    }
  }

  async function start(){
    if(!('BarcodeDetector' in window)){
      resultado.innerHTML = "Este browser não suporta leitura automática. Usa o campo manual.";
      return;
    }
    detector = new BarcodeDetector({formats:['qr_code']});
    stream = await navigator.mediaDevices.getUserMedia({video:{facingMode:"environment"}});
    video.srcObject = stream;
    video.play();
    scan();
  }

  async function scan(){
    try{
      const codes = await detector.detect(video);
      if(codes.length){
        verificar(codes[0].rawValue);
        stream.getTracks().forEach(t=>t.stop());
        return;
      }
    }catch(e){}
    requestAnimationFrame(scan);
  }
</script>

</body>
</html>
